<style>
  body {
    font-family: 'Segoe UI', sans-serif;
    background: linear-gradient(135deg, #e0f7fa, #f1f8e9);
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
  }

  .calculator-wrapper {
    background: #ffffff;
    padding: 2.5rem 3rem;
    border-radius: 20px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
    width: 100%;
    max-width: 500px;
    text-align: center;
    animation: fadeIn 0.6s ease-out;
  }

  h1 {
    color: #2c3e50;
    font-size: 2rem;
    margin-bottom: 1.5rem;
  }

  label {
    display: block;
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    text-align: left;
    color: #34495e;
  }

  input[type="text"] {
    width: 100%;
    padding: 0.75rem 1rem;
    font-size: 1rem;
    border: 1px solid #dfe6e9;
    border-radius: 10px;
    transition: border 0.3s, box-shadow 0.3s;
    box-sizing: border-box;
  }

  input[type="text"]:focus {
    border-color: #00acc1;
    box-shadow: 0 0 5px rgba(0, 172, 193, 0.3);
    outline: none;
  }

  button {
    margin-top: 1.5rem;
    padding: 0.75rem 2.5rem;
    font-size: 1rem;
    background: #00acc1;
    color: white;
    border: none;
    border-radius: 50px;
    cursor: pointer;
    transition: background 0.3s, transform 0.2s ease;
  }

  button:hover {
    background: #008b9a;
    transform: translateY(-2px);
  }

  .result, .error {
    margin-top: 2rem;
    font-size: 1.2rem;
    font-weight: 600;
    padding: 0.75rem 1.5rem;
    border-radius: 10px;
    animation: fadeSlideUp 0.6s ease;
  }

  .result {
    background: #e8f5e9;
    color: #2e7d32;
    border: 1px solid #c8e6c9;
  }

  .error {
    background: #ffebee;
    color: #c62828;
    border: 1px solid #ef9a9a;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: scale(0.9); }
    to { opacity: 1; transform: scale(1); }
  }

  @keyframes fadeSlideUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @media (max-width: 600px) {
    .calculator-wrapper {
      padding: 2rem;
      border-radius: 16px;
    }

    h1 {
      font-size: 1.75rem;
    }
  }
</style>

<div class="calculator-wrapper">
  <h1>üî¢ Smart String Calculator</h1>

  <%= form_with url: calculator_add_path, method: :post, data: { turbo: false }, local: true do %>
    <div>
      <%= label_tag :input, "Enter numbers (comma-separated)" %>
      <%= text_field_tag :input, params[:input], placeholder: "e.g. 1,2,3" %>
    </div>

    <div>
      <%= submit_tag "‚ûï Calculate", class: "btn" %>
    </div>
  <% end %>

  <% if @result.present? %>
    <div class="result">
      ‚úÖ Result: <%= @result %>
    </div>
  <% end %>

  <% if @error %>
    <div class="error">
      ‚ùå Error: <%= @error %>
    </div>
  <% end %>
</div>
